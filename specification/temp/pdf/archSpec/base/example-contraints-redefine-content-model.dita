&lt;!ENTITY included-domains 
                          "&amp;hi-d-att; 
                           &amp;ut-d-att; 
                           &amp;indexing-d-att;
                           <b class="+ topic/ph hi-d/b " xtrc="b:1;79:31" xtrf="file:/C:/Git/dita/specification/archSpec/base/example-contraints-redefine-content-model.dita">&amp;topic-constraints;</b>
  "
&gt;</codeblock></li>
