  &lt;topicref href="perform-install.dita"&gt;
    &lt;!-- other topics--&gt;
  &lt;/topicref&gt;
  <b class="+ topic/ph hi-d/b " xtrc="b:1;28:6" xtrf="file:/C:/Git/dita/specification/archSpec/base/example-ditavalref-in-filtered-branch.dita">&lt;!-- Begin configuration sub-branch --&gt;</b>
