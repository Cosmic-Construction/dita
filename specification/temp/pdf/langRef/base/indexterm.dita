          <dt class="- topic/dt " xtrc="dt:1;108:15" xtrf="file:/C:/Git/dita/specification/langRef/base/indexterm.dita"><xmlatt class="+ topic/keyword markup-d/markupname xml-d/xmlatt " xtrc="xmlatt:15;108:23" xtrf="file:/C:/Git/dita/specification/langRef/base/indexterm.dita">start</xmlatt></dt>
