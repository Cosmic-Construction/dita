    &lt;topicref href="prerequisites.dita"/&gt;
    &lt;topicref href="installing.dita"/&gt;
    &lt;topicref href="validating.dita"/&gt;
 <b class="+ topic/ph hi-d/b " xtrc="b:2;32:5" xtrf="file:/C:/Git/dita/specification/langRef/base/topicref.dita"> &lt;/topicref&gt;</b>
