        <dlentry class="- topic/dlentry " id="class" xtrc="dlentry:2;27:29" xtrf="file:/C:/Git/dita/specification/langRef/attributes/universalAttributes.dita">
          <dt class="- topic/dt " xtrc="dt:2;28:15" xtrf="file:/C:/Git/dita/specification/langRef/attributes/universalAttributes.dita"><xmlatt class="+ topic/keyword markup-d/markupname xml-d/xmlatt " xtrc="xmlatt:5;28:23" xtrf="file:/C:/Git/dita/specification/langRef/attributes/universalAttributes.dita">class</xmlatt>
